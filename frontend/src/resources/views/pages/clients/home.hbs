  <link rel="stylesheet" href="/css/home.css">

  <section class="adv_sec">
    <div class="w-100 text-center h1">
        <img src="/images/Logo/manfu-logo2.png" alt="">
        </div>
      <div class="container">
        <div class="adv_in">
          <div class="row">
            {{#each tables}}
            <div class="col-lg-4 col-md-6 col-12">
              <div {{#if is_available}}style="background-color: #64E291"{{/if}}  class="adv_box"
                data-toggle='modal'
                data-target='#openTableModal'
                onclick="$('#btnOpenTable ').attr('href', '/client/open-table/{{table_ID}}')"
              >
                <div class="media">
                  <h1 class="mx-5">{{table_ID}}</h1>
                  
                </div>
              </div>
            </div>
            {{/each}}
            
  
            
          </div>
        </div>
      </div>
    </section>
{{#if error}}
<div class="w-50 mx-auto text-center alert alert-danger">{{error}}</div>
{{/if}}

<div class='modal fade' id='openTableModal'>
  <div class='modal-dialog' role='document'>
      <div class='modal-content'>
          <div class='modal-header'>
              <h5 class='modal-title' id='exampleModalLabel'>Xác nhận</h5>
              <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                  <span aria-hidden='true'>&times;</span>
              </button>
          </div>
          <div class='modal-body'>
              Xác nhận sử dụng bàn này ?
          </div>
          <div class='modal-footer'>
              <button type='button' class='btn btn-secondary' data-dismiss='modal'>Hủy</button>
              <a type='button' id='btnOpenTable' class='btn btn-success'>Xác nhận</a>
          </div>
      </div>
  </div>
</div>

    <script>
        $(".adv_box").fadeIn(100).fadeOut(100).fadeIn(100);
    </script>